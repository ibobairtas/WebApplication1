@model WebApplication1.Models.tabel_nilai

@{
    ViewBag.Title = "Create";
}
<br />
<h4>Tambah Data</h4>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">ID Nilai</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.id_nilai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.id_nilai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nama Mahasiswa</label>
            <div class="col-md-10">
                @Html.DropDownList("id_mahasiswa", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_mahasiswa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nama Matakuliah</label>
            <div class="col-md-10">
                @Html.DropDownList("id_matakuliah", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_matakuliah, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nilai</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nilai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nilai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Simpan" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    <button onclick="location.href='@Url.Action("Index", "Nilai")';return false" class="btn btn-danger">Kembali</button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
