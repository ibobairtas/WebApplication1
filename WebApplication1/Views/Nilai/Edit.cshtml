@model WebApplication1.Models.tabel_nilai

@{
    ViewBag.Title = "Edit";
}
<br />
<h4>Edit Nilai</h4>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_nilai)

        <div class="form-group">
            @Html.LabelFor(model => model.id_mahasiswa, "Nama Mahasiswa : ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayTextFor(model => model.tabel_mahasiswa.nama_mahasiswa)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.id_matakuliah, "Nama Matakuliah : ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayTextFor(model => model.tabel_matakuliah.nama_matakuliah)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nilai, "Nilai : ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nilai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nilai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Simpan" class="btn btn-primary" />
                <button onclick="location.href='@Url.Action("Index", "Nilai")';return false" class="btn btn-danger">Kembali</button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
